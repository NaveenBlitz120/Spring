<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Add properties  -->
    <context:property-placeholder location="classpath:sport.properties"></context:property-placeholder>

    <!-- Define your beans here -->

    <!--Define the dependency    -->
    <bean id="myFortuneService"
          class="com.springdemo.coach.HappyFortuneService">
    </bean>

    <bean id="myCoach"
          class="com.springdemo.coach.CricketCoach">

    <!-- Set up the Constructor Injection       -->
        <constructor-arg ref="myFortuneService"></constructor-arg>

    </bean>

    <!-- Setter Injection config   -->
    <bean id="myFootballCoach"
          class="com.springdemo.coach.FootballCoach">

        <property name="fortuneService" ref="myFortuneService"></property>

        <!-- Passing values from the config file   -->
        <property name="emailAddress" value="${liv.email}"></property>
        <property name="teamName" value="${liv.teamName}"></property>
    </bean>

</beans>





